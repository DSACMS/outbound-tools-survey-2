{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Content and Tools Evaluation Survey",
    "description": "Evaluate documentation clarity and user confidence in using checklist areas",
    "type": "object",
    "properties": {
        "userName": {
            "type": "string",
            "description": "Please provide your full name",
            "minLength": 1
        },
        "checklistClarityRatings": {
            "type": "object",
            "description": "Section I: RATE THE CLARITY OF EACH CHECKLIST SECTION",
            "properties": {
                "codeReview": {
                    "type": "integer",
                    "description": "How clear was the Code Review section? (1-5)",
                    "minimum": 1,
                    "maximum": 5,
                    "enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                },
                "codeAnalysis": {
                    "type": "integer",
                    "description": "How clear was the Code Analysis section? (1-5)",
                    "minimum": 1,
                    "maximum": 5,
                    "enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                },
                "codeAnalysisToolkit": {
                    "type": "integer",
                    "description": "How clear was the Code Analysis Toolkit section? (1-5)",
                    "minimum": 1,
                    "maximum": 5,
                    "enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                },
                "licensing": {
                    "type": "integer",
                    "description": "How clear was the Licensing section? (1-5)",
                    "minimum": 1,
                    "maximum": 5,
                    "enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                },
                "commitHistory": {
                    "type": "integer",
                    "description": "How clear was the Commit History section? (1-5)",
                    "minimum": 1,
                    "maximum": 5,
                    "enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                },
                "readme": {
                    "type": "integer",
                    "description": "How clear was the README.md section? (1-5)",
                    "minimum": 1,
                    "maximum": 5,
                    "enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                },
                "codeJsonClarity": {
                    "type": "integer",
                    "description": "How clear was the code.json section? (1-5)",
                    "minimum": 1,
                    "maximum": 5,
                    "enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                },
                "community": {
                    "type": "integer",
                    "description": "How clear was the COMMUNITY.md section? (1-5)",
                    "minimum": 1,
                    "maximum": 5,
                    "enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                },
                "contributing": {
                    "type": "integer",
                    "description": "How clear was the CONTRIBUTING.md section? (1-5)",
                    "minimum": 1,
                    "maximum": 5,
                    "enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                },
                "security": {
                    "type": "integer",
                    "description": "How clear was the SECURITY.md section? (1-5)",
                    "minimum": 1,
                    "maximum": 5,
                    "enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                },
                "codeOfConduct": {
                    "type": "integer",
                    "description": "How clear was the CODE_OF_CONDUCT.md section? (1-5)",
                    "minimum": 1,
                    "maximum": 5,
                    "enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                }
            },
            "required": [
                "codeReview",
                "codeAnalysis",
                "codeAnalysisToolkit",
                "licensing",
                "commitHistory",
                "readme",
                "codeJsonClarity",
                "community",
                "contributing",
                "security",
                "codeOfConduct"
            ]
        },
        "documentationExperience": {
            "type": "object",
            "description": "Section II: FEEDBACK ABOUT DOCUMENTATION EXPERIENCE",
            "properties": {
                "timeToComplete": {
                    "type": "string",
                    "description": "How long would you estimate it take to find and complete the necessary documentation tasks?"
                },
                "slowdownFactors": {
                    "type": "string",
                    "description": "What (if anything) slowed you down?"
                },
                "repetitiveSections": {
                    "type": "string",
                    "description": "Were there any sections you found repetitive?"
                },
                "unnecessarySections": {
                    "type": "string",
                    "description": "Were there any sections that you felt were not necessary to have as the standard?"
                },
                "commentsClarity": {
                    "type": "integer",
                    "description": "How clear were the comments, terms and intructions? (1-5)",
                    "minimum": 1,
                    "maximum": 5,"enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                },
                "confusingTerms": {
                    "type": "string",
                    "description": "Were there any terms or instructions that felt ambiguous or confusing?"
                },
                "riskAcceptanceUnderstanding": {
                    "type": "string",
                    "description": "What is your understanding of risk acceptance?"
                }
            },
            "required": [
                "timeToComplete",
                "slowdownFactors",
                "repetitiveSections",
                "unnecessarySections",
                "commentsClarity",
                "confusingTerms",
                "riskAcceptanceUnderstanding"
            ]
        },
        "confidenceRatings": {
            "type": "object",
            "description": "Section III: CONFIDENCE IN COMPLETING ALL AREAS OF THE CODE REVIEW",
            "properties": {
                "projectMetadata": {
                    "type": "integer",
                    "description": "How confident are you in completing Project Metadata? (1-5)",
                    "minimum": 1,
                    "maximum": 5,"enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                },
                "repositoryDetails": {
                    "type": "integer",
                    "description": "How confident are you in completing Repository Details? (1-5)",
                    "minimum": 1,
                    "maximum": 5,"enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                },
                "riskAcceptance": {
                    "type": "integer",
                    "description": "How confident in your understanding of Risk Acceptance of Open Sourcing? (1-5)",
                    "minimum": 1,
                    "maximum": 5,"enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                },
                "makingPublic": {
                    "type": "integer",
                    "description": "How confident do you feel in your understanding of Making the Repository Public section? (1-5)",
                    "minimum": 1,
                    "maximum": 5,
                    "enum": [1, 2, 3, 4, 5],
                    "enumNames": [
                        "1 - Not clear at all",
                        "2 - Slightly clear",
                        "3 - Moderately clear",
                        "4 - Very clear",
                        "5 - Extremely clear"
                    ]
                }
            },
            "required": [
                "projectMetadata",
                "repositoryDetails",
                "riskAcceptance",
                "makingPublic"
            ]
        },
        "timeConsumingSections": {
            "type": "string",
            "description": "Which sections took the most time to complete? Which sections were more complex?"
        },
        "qualitativeFeedback": {
            "type": "object",
            "description": "Section IV: QUALITATIVE FEEDBACK ABOUT THE CHECKLIST",
            "properties": {
                "challengingSections": {
                    "type": "string",
                    "description": "Which sections were most challenging to understand?"
                },
                "unclearSteps": {
                    "type": "string",
                    "description": "Were the concept steps unclear or missing?"
                },
                "improvementSuggestions": {
                    "type": "string",
                    "description": "What would you change or add to improve the checklist?"
                },
                "informationClarity": {
                    "type": "string",
                    "description": "Do you feel that the information to complete the section was clear, why or why not?"
                }
            },
            "required": [
                "challengingSections",
                "unclearSteps",
                "improvementSuggestions",
                "informationClarity"
            ]
        }
    },
    "required": [
        "userName",
        "checklistClarityRatings",
        "documentationExperience",
        "confidenceRatings",
        "timeConsumingSections",
        "qualitativeFeedback"
    ],
    "additionalProperties": false
}